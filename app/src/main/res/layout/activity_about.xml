<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_portrait_phone"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="24dp"
    tools:context=".activity.HomePageActivity"
    android:orientation="vertical">


    <TextView
        android:text="About Creators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_text"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_horizontal_margin"/>

    <TextView
        android:text="Developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:padding="@dimen/activity_horizontal_margin"/>

    <TextView
        android:text="Sergey Nersesyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:paddingBottom="@dimen/vertical_margin_half"
        android:textColor="@color/pink_cc0099"/>

    <TextView
        android:text="Thanks to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:padding="@dimen/activity_horizontal_margin"/>

    <TextView
        android:text="Arsen Asulyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:paddingBottom="@dimen/vertical_margin_half"
        android:textColor="@color/blue_options"
        />
    <TextView
        android:text="Tatev Gyurjyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:paddingBottom="@dimen/vertical_margin_half"
        android:textColor="@color/green"
        />
    <TextView
        android:text="Zarine Avanyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:paddingBottom="@dimen/vertical_margin_half"
        android:textColor="@color/color_wrong"
        />
    <TextView
        android:text="Ani Karapetyan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:paddingBottom="@dimen/vertical_margin_half"
        android:textColor="@color/pink_main_ligter"
        />

    <TextView
        android:text="write us:  nersesyan.sergey.1@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
