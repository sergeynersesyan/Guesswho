<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="24dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_portrait_phone"
    tools:context=".activity.HomePageActivity">

    <TextView
        android:id="@+id/header_text"
        android:text="Guess What"
        android:textSize="36sp"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/settings_button_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_above="@+id/play_button_linearLayout"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/settings_button_imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_phone_shadow_small"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/settings_text"
            android:text="@string/action_settings"
            android:textColor="@color/pink_main"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_button_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_above="@+id/play_button_linearLayout"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/about_button_imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_phone_shadow_small"/>

        <TextView
            android:id="@+id/about_text"
            android:text="About"
            android:textColor="@color/pink_main"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_button_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="36dp">
        <ImageView
            android:id="@+id/play_button_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_phone_shadow_big"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/play_text"
            android:text="PLAY"
            android:textColor="@color/pink_main"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>
